{% extends template('widget') %}

{% define data = {  
    products: _widget.productCollection
} %}

{% block template %}
    {% if data.products is not empty %}
        {{parent()}}
    {% endif %}
{% endblock %}

{% block body %}
    {% embed molecule('simple-carousel') with {
        class: 'is-hidden-lg-xl',
        data: {
            slides: data.products,
            showDots: false
        },
        attributes: {
            'slides-to-show': 1
        }
    } only %}
        {% block slide %}
            {{ widget('ProductWidgetPlugin', slide) }}
        {% endblock %}
    {% endembed %}

    {% embed molecule('simple-carousel') with {
        modifiers: ['inset'],
        class: 'is-hidden-sm-md',
        data: {
            slides: data.products,
            showDots: false
        },
        attributes: {
            'slides-to-show': 4
        }
    } only %}
        {% block slide %}
            {{ widget('ProductWidgetPlugin', slide) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
