{% set products = products | default(_widget.productCollection) %}

{% if products is not empty %}
    {% embed molecule('simple-carousel') with {
        class: 'is-hidden-lg-xl',
        data: {
            slides: products,
            showDots: false
        },
        attributes: {
            'slides-to-show': 1
        }
    } only %}
        {% block slide %}
            {{ widget('ProductWidgetPlugin', slide) }}
        {% endblock %}
    {% endembed %}

    {% embed molecule('simple-carousel') with {
        modifiers: ['inset'],
        class: 'is-hidden-sm-md',
        data: {
            slides: products,
            showDots: false
        },
        attributes: {
            'slides-to-show': 4
        }
    } only %}
        {% block slide %}
            {{ widget('ProductWidgetPlugin', slide) }}
        {% endblock %}
    {% endembed %}
{% endif %}
